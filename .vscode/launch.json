{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local RSHIM sudo GDB Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/rshim",
            "args": [
                "-f",
                "-l",
                "3"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [], // Add any required environment variables
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/labhome/pgeng/bin/sudo-gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set disassembly flavor to Intel",
                    "text": "set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "", // Task to run before launching the debugger, e.g., "build"
            "postDebugTask": "" // Task to run after ending the debugger session
        },
        {
            "name": "Attach to RSHIM Process",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/src/rshim",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "miDebuggerPath": "/labhome/pgeng/bin/sudo-gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set disassembly flavor to Intel",
                    "text": "set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (bfb-install)",
            "cwd": "${workspaceFolder}/scripts",
            "program": "${workspaceFolder}/scripts/bfb-install",
            "args": [
                "--rshim",
                "bu-lab105:8305:rshim0",
                "--remote-mode",
                "nc",
                "--reverse-nc",
                "--bfb",
                "~/work/rshim/bins/default.bfb",
                "--verbose"
            ],
        },
        {
            "name": "Remote PC RSHIM GDB Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/rshim",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:9000",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "",
            "postDebugTask": ""
        },
        {
            "name": "RSHIM BMC Debug - Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/rshim", // Path to the local copy of the executable
            "args": [
                "-f",
                "-l",
                "3"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerServerAddress": "10.15.8.140:9000", // BMC ARM host's IP address and gdbserver port
            "setupCommands": [
                {
                    "description": "Stop at fork()",
                    "text": "catch fork",
                    "ignoreFailures": true
                },
                {
                    "description": "Follow parent process",
                    "text": "set follow-fork-mode parent",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "", // Any task to run before launching the debugger (like compiling)
            "miDebuggerPath": "/opt/bmc-sdk/sysroots/x86_64-oesdk-linux/usr/bin/arm-openbmc-linux-gnueabi/arm-openbmc-linux-gnueabi-gdb" // Path to the gdb client compatible with ARM, if necessary
        },
        {
            "name": "PC RSHIM Debug - Attach",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/rshim",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerServerAddress": "10.15.8.107:9000",
            "setupCommands": [
                {
                    "description": "Stop at fork()",
                    "text": "catch fork",
                    "ignoreFailures": true
                },
                {
                    "description": "Follow child process",
                    "text": "set follow-fork-mode child",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/opt/bmc-sdk/sysroots/x86_64-oesdk-linux/usr/bin/arm-openbmc-linux-gnueabi/arm-openbmc-linux-gnueabi-gdb"
        },
        {
            "name": "RSHIM BMC Debug - Attach",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/rshim",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerServerAddress": "10.15.8.140:9000",
            "setupCommands": [
                {
                    "description": "Stop at fork()",
                    "text": "catch fork",
                    "ignoreFailures": true
                },
                {
                    "description": "Follow child process",
                    "text": "set follow-fork-mode child",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/opt/bmc-sdk/sysroots/x86_64-oesdk-linux/usr/bin/arm-openbmc-linux-gnueabi/arm-openbmc-linux-gnueabi-gdb"
        }
    ]
}
